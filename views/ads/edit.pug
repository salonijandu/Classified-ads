extends ../layout
block content
  .container
    h2 Update Advertisement
    form(action="/ads/update/"+ad._id method="post")
      .form-group
        label(for='Title') Title:
        input#Title.form-control(type='text' placeholder='Enter Advertisement Title' name='Title' value=ad.Title)
      .form-group
        label(for='Description') Description:
        input#Description.form-control(type='text' placeholder='Enter Advertisement Description' name='Description' value=ad.Description)
      .form-group
        label(for='Price') Price:
        input#Price.form-control(type='Number' placeholder='Enter Price' name='Price' value=ad.Price)
      button.btn.btn-default(type='submit') Update